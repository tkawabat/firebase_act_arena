{
  "name": "functions",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "tsc",
    "serve": "npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__test__/*.spec.+(ts|tsx|js)"
    ],
    "setupFilesAfterEnv": ["<rootDir>/src/__test__/init.ts"]
  },
  "engines": {
    "node": "8"
  },
  "main": "build/src/index.js",
  "dependencies": {
    "@firebase/app": "^0.5.5",
    "@firebase/app-types": "^0.5.2",
    "@google-cloud/firestore": "^2.2.7",
    "@types/moment-timezone": "^0.5.12",
    "commander": "^3.0.0",
    "faker": "^4.1.0",
    "firebase-admin": "^8.4.0",
    "firebase-functions": "^3.1.0",
    "fs-extra": "^8.1.0",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.28"
  },
  "devDependencies": {
    "@types/faker": "^4.1.5",
    "@types/fs-extra": "^8.0.0",
    "@types/jest": "^25.1.3",
    "@types/sinon": "^7.5.2",
    "firebase-functions-test": "^0.2.0",
    "jest": "^25.1.0",
    "sinon": "^9.0.0",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.3.0",
    "tslint": "^5.19.0",
    "typescript": "^3.2.2"
  },
  "private": true
}
